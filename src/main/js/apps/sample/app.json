{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-winter",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "map-init",
            "toolset",
            "banner",
            "basemaptoggler",
            "custominfo",
            "viewmodeswitcher",
            "mapnavigation",
            "popups-default",
            "scalebar",
            "locateme",
            "printing",
            "share-link",
            "omnisearch",
            "locator-store",
            "dn_timeextent"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "basemaptoggler": {
            "Config": {
                "nextBasemap": "hybrid"
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "widgetSettings": {
                        "content": "<p>Dies ist ein Beispiel für ein Impressum.</p>",
                        "window": {
                            "marginBox": {
                                "w": 320,
                                "h": 500
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": true,
                            "maximizable": false,
                            "resizable": true,
                            "title": "Impressum"
                        }
                    },
                    "type": "IMPRINT",
                    "toolClass": "ctInfo",
                    "title": "Impressum",
                    "tooltip": "Zeige Impressum",
                    "tooltipPositions": [
                        "after",
                        "above",
                        "below",
                        "before"
                    ],
                    "iconClass": "icon-custom-info-imprint",
                    "togglable": true,
                    "id": "IMPRINT_Imprint_CustomInfoTool"
                },
                {
                    "widgetSettings": {
                        "content": "<p>Dies ist ein Beispiel für ein Impressum.</p>",
                        "window": {
                            "marginBox": {
                                "w": "100%",
                                "h": "100%"
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": true,
                            "maximizable": false,
                            "resizable": true,
                            "title": "Impressum"
                        }
                    },
                    "type": "IMPRINT",
                    "toolClass": "ctInfo",
                    "title": "Impressum",
                    "tooltip": "Zeige Impressum",
                    "iconClass": "icon-custom-info-imprint",
                    "togglable": true,
                    "id": "IMPRINT_Imprint_CustomInfoTool_mobile"
                }
            ]
        },
        "map-init": {
            "Config": {
                "map": {
                    "layers": [
                        {
                            "id": "hurricane",
                            "title": "Hurricane",
                            "type": "AGS_FEATURE",
                            "url": "https://sampleserver5.arcgisonline.com/arcgis/rest/services/Hurricanes/MapServer/0"
                        }
                    ],
                    "basemap": "streets",
                    "ground": {
                        "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
                        "type": "ELEVATION"
                    }
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 600000,
                        "ymin": 5800000,
                        "xmax": 1700000,
                        "ymax": 7600000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "everlasting"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "drawer_button",
                                "attachTo": "map_topleft",
                                "props": {
                                    "layoutIndex": 0
                                }
                            },
                            {
                                "widgetRole": "sharelink",
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "legend",
                                "sublayout": [
                                    "mobile_portrait",
                                    "mobile_landscape"
                                ],
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "printing",
                                "window": {
                                    "dockable": false,
                                    "dockingBar": null
                                }
                            },
                            {
                                "widgetRole": "banner",
                                "sublayout": [
                                    "mobile_portrait"
                                ],
                                "attachTo": "footer_right"
                            }
                        ]
                    }
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool",
                            "viewmodeSwitcherTool",
                            "timeExtentToggleTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    },
                    {
                        "id": "drawer_left",
                        "title": "Werkzeuge",
                        "cssClass": "ct-main-app-menu",
                        "tools": [
                            "printingToggleTool",
                            "sharelinkTool",
                            "IMPRINT_Imprint_CustomInfoTool",
                            "IMPRINT_Imprint_CustomInfoTool_mobile"
                        ],
                        "registerWidget": {
                            "widgetRole": "drawer_button"
                        },
                        "container": "ignore",
                        "windowType": "drawer_left"
                    }
                ]
            }
        }
    }
}
